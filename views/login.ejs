<body>

<div class="container">
    <h1>login page</h1>
    <p>set cookie from url hash as cognito token.</p>
    <p id="message"></p>
</div>

<script>
    /*
     * get cognito tokens from url hash and set them as cookies
     */
    if (window.location.hash) {
        var hash = window.location.hash.substring(1);
        var result = {};
        hash.split("&").forEach(function (part) {
            var item = part.split("=");
            result[item[0]] = item[1];
        });
        document.cookie = "id_token=" + result['id_token'] + "; expires=" + result['expires'] + "; path=/";
        document.cookie = "access_token=" + result['access_token'] + "; expires=" + result['expires'] + "; path=/";
        window.location.href = "./todo";
    } else {
        $('#message').html("il manque les tokens dans l'URL");
    }


</script>

</body>
