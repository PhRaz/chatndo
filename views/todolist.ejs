<!DOCTYPE html>
<html>
<head>
    <style>
        a {
            text-decoration: none;
            color: red;
        }
    </style>
</head>
<body>
<h1>TODO liste</h1>

<ul id="todo_liste">
    <% todo_liste.forEach(function(todo, index) { %>
    <li>
        <a href="todo/supprimer/<%= index %>">&#x2718; </a><%= todo %>
    </li>
    <% }); %>
</ul>

<form action="/todo/ajouter" method="post">
    <label for="truc_a_faire">Que dois-je faire ?</label>
    <input type="text" name="trucAFaire" id="truc_a_faire" autofocus/>
    <input type="submit" value="Valider"/>
</form>

</body>
</html>
